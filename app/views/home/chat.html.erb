<script>
  var dispatcher = new WebSocketRails('chatting-cycorld.c9.io/websocket');
  var username =  "<%= current_user.username %>";
  var channel = dispatcher.subscribe("<%=@channel.id%>");
  var univ = "<%=current_user.univ%>";
  $("#btn-input").keypress(function(event){
    if(event.keyCode == 13){
        $("#btn-chat").click();
    }
  });
  $("#btn-chat").on("click", function() {
    var msg = $("#btn-input").val();
    channel.trigger('chat', {"channel_id" : "<%=@channel.id%>", "content" : msg, "username" : username, "univ" : univ});
    console.log(msg);
    $("#btn-input").val("");
  });
    channel.bind('chat', function(msg) {
      console.log(msg);
    $("#msg_container_base").prepend(
      '<div class="row msg_container base_receive">\
        <div class="col-md-2 col-xs-2 avatar"> \
        </div>\
        <div class="col-md-10 col-xs-10">\
            <% if current_user.username %>
              <div class="messages msg_receive">\
            <% else %>
              <div class="messages msg_sent">\
            <% end %>
                <p>' + msg["channel_id"] +  '  | ' + msg["content"] + '</p>\
                <time datetime="' +Date().toLocaleString()+ '"> •' + msg["univ"] +" | "+ msg["username"] + '</time>\
            </div>\
        </div>\
      </div>');
    });
  <% if flash[:closed] %>
    window.close();
  <% end %>
</script>